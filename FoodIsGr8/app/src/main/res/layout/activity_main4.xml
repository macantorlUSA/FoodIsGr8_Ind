<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".MainActivity4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageSucur1"
            android:layout_width="160dp"
            android:layout_height="100dp"
            tools:srcCompat="@tools:sample/avatars" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textSucur1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sucursal 1" />

            <TextView
                android:id="@+id/descriSucur1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Descripcion" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageSucur2"
            android:layout_width="160dp"
            android:layout_height="100dp"
            tools:srcCompat="@tools:sample/avatars" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textSucur2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sucursal 2" />

            <TextView
                android:id="@+id/descriSucur2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Descripcion" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageSucur3"
            android:layout_width="160dp"
            android:layout_height="100dp"
            tools:srcCompat="@tools:sample/avatars" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textSucur3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sucursal 3" />

            <TextView
                android:id="@+id/descriSucur3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Descripcion" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/back2"
        android:layout_width="120dp"
        android:layout_height="49dp"
        android:text="Regresar"
        android:translationX="270dp" />

</LinearLayout>